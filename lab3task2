#include <stdio.h>

void print_array_fn(int arr[], int arr_len)
{
	//prints each element of array
	printf("You have selected the view test score option, The student's scores are:\n");
	for (char i = 0; i < arr_len; i++)
	{
		printf("%d ", arr[i]);
	}
	printf("\n\n");
}
void enter_array_fn(int arr[], int arr_len[])
{
	printf("You have selected the score entering function. Enter 10 scores ranging from 0-10\n");
	for (char i = 0; i < arr_len; i++)
	{
		int scanned_score = 0;
		scanf_s("%d ", &scanned_score);
		if (scanned_score > 10 || scanned_score < 0)
		{
			printf("Please enter a new score between 0-10\n");
			scanf_s("%d", &scanned_score);
		}
		arr[i] = scanned_score;
	}
}
int array_avg_fn(int arr[], int arr_len)
{
	//finds the average value of an array w decimal
	printf("You have selected the average score function\n");
	float total = 0;
	for (char i = 0; i < arr_len; i++)
	{
		total = total + (float)arr[i];
	}
	float avg = total / (float)arr_len;
	return avg;
	printf("\n\n");
}
void update(int arr[], int arr_len)
{
	printf("You have selected the update score option. \n");
	printf("What test score would you like to update ?\n ");
	printf("please keep in mind the first test is entry 0. Enter a quiz number from 0-9 (due to C arrays)\n");
	char test_number = 0;
	scanf_s("%hhd", &test_number);
	if (test_number > 10 || test_number < 0)
	{
		printf("enter a test number between 0-9 (C arrays)");
		scanf_s("%hhd", &test_number);
	}
	printf("What would you like to update the score to? Score must be from 0-10\n");
	char new_test_score = 0;
	scanf_s("%hhd", &new_test_score);
	if (new_test_score > 10 || test_number < 0)
	{
		printf("test score must be between 0-10. try again\n");
		scanf_s("%hhd", &new_test_score);
	}
	arr[test_number] = new_test_score;
	printf("\n\n");
}
void max_val_fn(int arr[], int arr_len[])
{
	printf("You have selected the max value function.");
	int max_value = 0;
	for (char i = 0; i < arr_len; i++)
	{
		max_value = arr[0];
		if (arr[i] > max_value)
		{
			max_value = arr[i];
		}
	}
	printf("the highest score this student recvied is %d", max_value);
}
int main()
{
	int test_arr[] = { 7,7,7,7,7,7,7,7,7,7 };
	int test_arr_len = sizeof(test_arr) / sizeof(int);

	char options = 0;
	printf("welcome to the school test score program. please select an option:\n");
	printf("1. enter student scores\n2.print student scores\n3.student's avg score\n4. update score\n5. student's max score\n6.Exit\n");
	scanf_s("%hhd", &options);

	while (options != 6)
	{
		int sum1 = 0; //variable for int return at case 2
		float avg1 = 0; //variable for avg return at case3

		switch (options)
		{
		case 1: //enter test scores
			enter_array_fn(test_arr, test_arr_len);
			printf("\n");
			break;
		case 2: // print scores
			print_array_fn(test_arr, test_arr_len);
			break;
		case 3: //find avg score
			avg1 = array_avg_fn(test_arr, test_arr_len);
			printf("The student's average score is %f", avg1);
			printf("\n");
			break;
		case 4: //update score
			update(test_arr, test_arr_len);
			printf("\n");
			break;
		case 5: //find highest score
			max_val_fn(test_arr, test_arr_len);
			printf("\n");
			break;
		default:
			printf("the number you entered does not correspond to an option. try again");
			break;
		}
		printf("welcome to the school test score program. please select an option:\n");
		printf("1. enter student scores\n2. print student scores\n3. student's avg score\n4. update score\n5. student's max score\n6. Exit\n");
		scanf_s("%hhd", &options); 
	}//while end

	return 0;
}//main end
