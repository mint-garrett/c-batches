///purpose is to create an array based test storing system with different funtions


#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void print_array_fn(int arr[], int arr_len)
{
	//prints each element of array
	for (char i = 0; i < arr_len; i++)
	{
		printf("You have selected the view test score option, The student's scores are:\n");
		printf("%d", arr[i]);
		printf("\n\n");
	}
}
int array_sum_fn(int arr[], int arr_len)
{
	//sums all elements in arrray
	printf("You have selected the total score function.");
	int sum = 0;
	for (char i = 0; i < arr_len; i++)
	{
		sum = sum + arr[i];
	}
	printf("\n\n");
	return sum;
}
int array_avg_fn(float arr[], float arr_len)
{
	//finds the average value of an array w decimal
	printf("You have selected the average score function");
	float total = 0;
	for (char i = 0; i < arr_len; i++)
	{
		total = total + arr[i];
	}
	float avg = total / arr_len;
	return avg;
}
void update(int arr[], int arr_len)
{
	printf("You have selected the update score option. \n");
	printf("What test score would you like to update ?\n ");
	printf("please keep in mind the first test is entry 0 (due to C arrays)\n");
	char test_number = 0;
	scanf_s("%hhd", &test_number);
	printf("What would you like to update the score to?");
	char new_test_score = 0;
	scanf_s("%hhd", &new_test_score);
	arr[test_number] = new_test_score;
}

int main()
{
//srand(time(0));

	int test_arr[] = { 7,7,7,7,7,7,7,7,7,7 };
	int test_arr_len = sizeof(test_arr) / sizeof(int);
	
	char options =0;
	printf("welcome to the school test score program. please select an option:\n");
	printf("1. print student record\n2. print total score\n3. print average score\n4. update student score\n5. Exit program\n");
	scanf_s("%hhd", &options);
	
	while (options != 5)
	{
		int sum1 = 0; //variable for int return at case 2
		float avg1 = 0; //variable for avg return at case3
	
		switch (options)
		{
		case 1:
			print_array_fn(test_arr, test_arr_len);
			break;
		case 2:
			sum1 = array_sum_fn(test_arr, test_arr_len);
			printf("The student's test score sum is %d", sum1);
			printf("\n");
			break;
		case 3:
			avg1 = array_avg_fn(test_arr, test_arr_len);
			printf("The student's average score is %f", avg1);
			printf("\n");
			break;
		case 4:
			update(test_arr, test_arr_len);
			printf("\n");
			break;
		}
		printf("welcome to the school test score program. please select an option:\n");
		printf("1. print student record\n2. print total score\n3. print average score\n4. update student score\n 5. Exit program\n");
		scanf_s("%hhd", &options);
	}
	return 0;
}
